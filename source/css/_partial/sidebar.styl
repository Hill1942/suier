#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  padding: 15px
  a
    color: color-light-grey
    text-decoration: none
    &:hover
      text-decoration: underline
  li
    margin: 10px 0
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px